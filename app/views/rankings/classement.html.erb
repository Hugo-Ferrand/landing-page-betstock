    <br>
    <br>
    <u><p>Nombre de parieurs au <%= Date.today.strftime('%d/%m') %> : 312</p></u>
    <pre><strong> Rang</strong>                <strong>Nb points</strong>                <strong>Pseudo Insta</strong></pre>
  </div>
  <% @users.each do |user| %>
    <ul>
        <%= user.ranking %>
        <%= user.wins %>
        <%= user.pseudo[0..27] %>
    </ul>
  <% end %>
</div>
